.nav {
  width: 100%;
  height: 130rpx;
  background-color: #f8f8f8;
  margin-top: 100rpx;
  white-space: nowrap;
  padding-left: 30rpx;
  padding-top: 31rpx;
}

.navItem {
  width: 100rpx;
  height: 160rpx;
  margin-left: 20rpx;
  display: inline-block;
}

.navItem image {
  width: 48rpx;
  height: 48rpx;
}

.navItem>view {
  font-size: 26rpx;
  margin-top: 10rpx;
}

.caseItem {
  width: 690rpx;
  height: 870rpx;
  box-shadow: 0rpx 5rpx 20rpx 0rpx rgba(202, 202, 202, 0.7);
  border-radius: 10rpx;
  margin: 0rpx 30rpx 30rpx 30rpx;
}

.caseTitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 24rpx;
  align-content: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: -60rpx;

}

.sign {
  width: 84rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  color: #005efe;
  font-size: 24rpx;
  margin-left: 30rpx;
  border: 1rpx solid #005efe;
  border-radius: 0px 18rpx 0px 18rpx;
}


.caseIntro {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  margin-left: 27rpx;
  margin-top: 14rpx;
}

.caseIntroDetail {
  width: 530rpx;
  font-size: 24rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin-left: 19rpx;
  letter-spacing: 2rpx;
}

.container {
  padding-top: 138rpx;
}
